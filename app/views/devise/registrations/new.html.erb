<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="card card-wrapper">
    <div class="card-header bg-dark font-light">
      <h2>Sign Up</h2>
    </div>

    <div class="card-body">

      <div class="field form-group mb-3px">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-input form-control" %>
        <%= f.label :email, class:"form-label mb-3px" %><br />
      </div>

      <div class="field form-group mb-3px">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-input form-control" %>
        <%= f.label :password, class:"form-label mb-3px" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-input form-control" %>
        <%= f.label :password_confirmation, class:"form-label mb-3px" %><br />
      </div>

    </div>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-success"%> |
    <%= render "devise/shared/links" %>
  </div>
<% end %>
