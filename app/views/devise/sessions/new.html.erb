<br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="card card-wrapper">
    <div class="card-header bg-dark font-light">
      <h2>Log in</h2>
    </div>

    <div class="card-body">
      <div class="field form-group mb-3px">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-input form-control" %>
        <%= f.label :email, class:"form-label mb-3px" %><br />
      </div>

      <div class="field form-group mb-3px">
        <%= f.password_field :password, autocomplete: "current-password", class:"form-input form-control" %>
        <%= f.label :password, class:"form-label mb-3px" %><br />
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3px mt-15px">
          <%= f.check_box :remember_me, class:"form-check-input" %>
          <%= f.label :remember_me, class:"form-check-label" %>
        </div>
      <% end %>
    </div>
  </div>

  <br>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary" %> |
    <%= render "devise/shared/links" %>
  </div>
<% end %>
