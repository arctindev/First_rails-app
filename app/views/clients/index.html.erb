<br>

<h1>Clients</h1>

<br>
<div class="overflow-x-enable overflow-y-enable client-table-wrapper">
  <table class="table client-table">
    <thead class="table-dark">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Number</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.first_name %></td>
          <td><%= client.last_name %></td>
          <td><%= client.email %></td>
          <td><%= client.number %></td>
          <td><%= link_to 'Show', client, class: "btn btn-primary table-button" %></td>
          <td><%= link_to 'Edit', edit_client_path(client), class: "btn btn-success table-button" %></td>
          <td><%= link_to 'Destroy', client, class: "btn btn-danger table-button", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Client', new_client_path, class: "btn btn-primary" %>

<br>

<% if notice %>
  <div class="alert alert-success mt-30px" role="alert">
    <p id="notice">
    <%= notice %>
    </p>
  </div>
<% end %>
